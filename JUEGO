<script>
let respuestaCorrecta="";
let pistaTexto="";

function normalizar(t){
  return t.toUpperCase()
  .replace(/\s+/g,"")
  .replace(/Ã/g,"A").replace(/Ã‰/g,"E")
  .replace(/Ã/g,"I").replace(/Ã“/g,"O")
  .replace(/Ãš/g,"U");
}

function limpiar(){
  document.getElementById("respuesta").value="";
  document.getElementById("feedback").innerHTML="";
}

function cargar(ejemplo,nombre,pista){
  estructura.innerHTML=ejemplo;
  respuestaCorrecta=nombre;
  pistaTexto=pista;
  limpiar();
}

function validar(){
  const r=normalizar(respuesta.value);
  const ok=normalizar(respuestaCorrecta);
  if(r===ok){
    feedback.innerHTML="<div class='ok'>âœ” CORRECTO</div>";
  }else{
    feedback.innerHTML=
      "<div class='bad'>âœ˜ INCORRECTO</div>"+
      "<div class='pista'>PISTA: "+pistaTexto+"</div>";
  }
}

